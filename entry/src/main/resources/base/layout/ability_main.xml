<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_ability_main"
        ohos:layout_alignment="horizontal_center"
        ohos:text="Service连接状态 : 未连接"
        ohos:text_size="50"
        ohos:top_margin="200vp"/>

    <Button
        ohos:id="$+id:contect"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$color:black_color"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10vp"
        ohos:text="连接 ServiceAbility"
        ohos:text_color="$color:white_color"
        ohos:text_size="50"
        ohos:top_margin="200vp"/>

    <Button
        ohos:id="$+id:discontect"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$color:black_color"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10vp"
        ohos:text="断开与 ServiceAbility 的连接"
        ohos:text_color="$color:white_color"
        ohos:text_size="50"
        ohos:top_margin="10vp"/>

</DirectionalLayout>